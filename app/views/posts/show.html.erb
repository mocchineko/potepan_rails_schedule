
    <div class="main_container">
        <div class="information">
            <h2>スケジュール詳細</h2>
        </div>
        <table> 
            <tr>
                <th>タイトル</th>
                <td><%= @post.title %></td>
            </tr>
            <tr>
                <th>開始日</th>
                <td><%= @post.start.strftime("%Y年%m月%d日") %></td>
            </tr>
            <tr>
                <th>投稿日時</th>
                <td><%= @post.created_at.strftime("%Y年%m月%d日") %></td>
            </tr>
            <tr>
                <th>終日</th>
                <td>
                    <strong><%= "○" if @post.all_day %></strong>
                </td>
            </tr>
            <tr>
                <th>スケジュールメモ</th>
                <td><%= @post.content %></td>
            </tr>
        </table>
        <ul>
            <li>
                <%= link_to "スケジュール一覧に戻る", posts_path %>
            </li>
            <li>
                <%= link_to "スケジュールを編集する", "/posts/#{@post.id}/edit" %>
            </li>
            <li>
            <div class="destroy">
            <%= link_to "削除", "/posts/#{@post.id}/destroy", action: "destroy", data: {confirm: "本当に削除しますか？"} %>
        </div>
            </li>
        </ul>
    </div>
    <footer>
        <h1>現在の日時 : 2021年04月29日</h1>
    </footer>
