<div class="main_container">
    <div class="information">
        <h2>スケジュール一覧</h2>
        <%= render 'layouts/flash_messages' %>
    </div>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>タイトル</th>
                <th>開始日</th>
                <th>終了日</th>
                <th>終日</th>
                <th>スケジュール更新日時</th>
                <th>確認</th>
                <th>編集</th>
                <th>削除</th>
            </tr>
        </thead>
        <tbody>
            <% @posts.each do |post| %>
                <div class="posts-index-item">
                    <tr>
                        <td>
                            <%= post.id %>
                        </td>
                        <td>
                            <%= post.title %>
                        </td>
                        <td>
                            <%= post.start %>
                        </td>
                        <td>
                            <%= post.last %>
                        </td>
                        <td>
                            <%= "○" if post.all_day %>
                        </td>
                        <td>
                            <%= post.updated_at.strftime("%Y年%m月%d日%H時%M分") %>
                        </td>
                        <td>
                            <%= link_to("確認", "/posts/#{post.id}") %>
                        </td>
                        <td>
                            <%= link_to("編集", "/posts/#{post.id}/edit") %>
                        </td>
                        <td>
                            <div class="destroy">
                                <%= link_to "削除", "/posts/#{post.id}/destroy", action: "destroy", data: {confirm: "本当に削除しますか？"} %>
                            </div>
                        </td>
                    </tr>
                </div>
            <% end %>
        </tbody>
    </table>
    <p><%= link_to("スケジュール新規登録", "posts/new") %></p>
</div>
<footer>
    <h1>現在の日時 : 2021年04月25日
        　スケジュール合計 : <%= @post_count %>
    </h1>
</footer>
